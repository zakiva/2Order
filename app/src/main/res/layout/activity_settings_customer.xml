<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.zakiva.tworder.settings_customer">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="More"
        android:textSize="32dp"
        android:textStyle="bold"
        android:textColor="#0a047c"
        android:id="@+id/textView9"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Switch
        android:checked="true"
        android:switchMinWidth="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/switch1"
        android:layout_marginTop="55dp"
        android:layout_toRightOf="@+id/enable_textview"
        android:layout_marginLeft="55dp"
        android:layout_below="@+id/textView9" />

    <Button
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginTop="55dp"
        android:text=""
        android:id="@+id/button14"
        android:background="@drawable/shre_on_facebook"
        android:onClick="shareOnFacebookClicked"
        android:layout_below="@+id/switch1"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/facebook_textview"
  />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="Tell friends about 2Order:"
        android:id="@+id/facebook_textview"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/switch1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="Enable notifications:"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/textView9"
        android:id="@+id/enable_textview"      />

    <View
        android:id="@+id/SplitLine_hor1"
        android:layout_width="match_parent"
        android:layout_height= "2dp"
        android:background="#c0c0c0"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="20dp"/>

    <View
        android:id="@+id/SplitLine_hor2"
        android:layout_width="match_parent"
        android:layout_height= "2dp"
        android:background="#c0c0c0"
        android:layout_below="@+id/enable_textview"
        android:layout_marginTop="25dp"/>

    <View
        android:id="@+id/SplitLine_hor3"
        android:layout_width="match_parent"
        android:layout_height= "2dp"
        android:background="#c0c0c0"
        android:layout_below="@+id/facebook_textview"
        android:layout_marginTop="30dp"/>

</RelativeLayout>
