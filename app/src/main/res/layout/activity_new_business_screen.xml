<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none" >


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.zakiva.tworder.new_business_screen">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:id="@+id/imageView"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/usernameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:text="Email"
        android:textSize="20dp"
        android:layout_marginTop="-15dp"
        android:layout_marginLeft="10dp"
        />

    <EditText
        android:id="@+id/usernameInput"
        android:imeOptions ="actionSend"
        android:singleLine="true"
        android:inputType="textEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usernameText"
        android:layout_marginLeft="10dp"
        android:width="330dp" />

    <TextView
        android:id="@+id/businessText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usernameInput"
        android:text="Business Name"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        />

    <EditText
        android:id="@+id/businessNameInput"
        android:imeOptions ="actionSend"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/businessText"
        android:layout_marginLeft="10dp"
        android:width="330dp"
        />

    <TextView
        android:id="@+id/adressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Business Address"
        android:textSize="20dp"
        android:layout_below="@+id/businessNameInput"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        />

    <EditText
        android:id="@+id/businessAddressInput"
        android:imeOptions ="actionSend"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adressText"
        android:layout_marginLeft="10dp"
        android:width="330dp"
        />

    <TextView
        android:id="@+id/passwordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="20dp"
        android:layout_below="@+id/businessAddressInput"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        />

    <EditText
        android:id="@+id/passwordInput"
        android:imeOptions ="actionSend"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordText"
        android:layout_marginLeft="10dp"
        android:width="330dp"
        android:inputType="textPassword"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:textSize="20dp"
        android:id="@+id/repasswordText"
        android:layout_below="@+id/passwordInput"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        />

    <EditText
        android:id="@+id/repasswordInput"
        android:imeOptions ="actionSend"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/repasswordText"
        android:layout_marginLeft="10dp"
        android:width="330dp"
        android:inputType="textPassword"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login1"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:textColor="#FFF"
        android:background="#5151d6"
        android:layout_below="@+id/repasswordInput"
        android:onClick="onBusinessLogClick"
        />



    <Button
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:text=""
        android:id="@+id/button"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/login1"
        android:onClick="allReadyHaveAcountClick"
        android:background="@drawable/sign_in"
        android:layout_toRightOf="@+id/textView14"
        android:layout_marginLeft="12dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have account? Sign in:"
        android:id="@+id/textView14"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/login1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>



</ScrollView>